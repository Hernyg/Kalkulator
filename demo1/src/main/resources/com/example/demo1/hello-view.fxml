<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>


<?import javafx.scene.layout.VBox?>
<VBox alignment="center" xmlns:fx="http://javafx.com/fxml"  fx:controller="com.example.demo1.HelloController">
    <Label text ="empty" fx:id="welcomeText"/>


<GridPane alignment="center" hgap="10" vgap="10" >
<StackPane GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan = "3">

    </StackPane>
    <StackPane GridPane.rowIndex="1" GridPane.columnIndex="0">
        <Button text="1" onAction="#onHelloButtonClick"/>
    </StackPane>

    <StackPane GridPane.rowIndex="1" GridPane.columnIndex="1">
        <Button text="2" onAction="#onHelloButtonClick"/>
    </StackPane>

    <StackPane GridPane.rowIndex="1" GridPane.columnIndex="2">
        <Button text="3" onAction="#onHelloButtonClick"/>
    </StackPane>

    <StackPane GridPane.rowIndex="2" GridPane.columnIndex="0">
        <Button text="4" onAction="#onHelloButtonClick"/>
    </StackPane>

    <StackPane GridPane.rowIndex="2" GridPane.columnIndex="1">
        <Button text="5" onAction="#onHelloButtonClick"/>
    </StackPane>

    <StackPane GridPane.rowIndex="2" GridPane.columnIndex="2">
        <Button text="6" onAction="#onHelloButtonClick"/>
    </StackPane>

    <StackPane GridPane.rowIndex="3" GridPane.columnIndex="0">
        <Button text="7" onAction="#onHelloButtonClick"/>
    </StackPane>

    <StackPane GridPane.rowIndex="3" GridPane.columnIndex="1">
        <Button text="8" onAction="#onHelloButtonClick"/>
    </StackPane>

    <StackPane GridPane.rowIndex="3" GridPane.columnIndex="2">
        <Button text="9" onAction="#onHelloButtonClick"/>
    </StackPane>

    <StackPane GridPane.rowIndex="4" GridPane.columnIndex="1">
        <Button text="0" onAction="#onHelloButtonClick"/>
    </StackPane>

    <StackPane GridPane.rowIndex="5" GridPane.columnIndex="0">
        <Button text="+" onAction="#onHelloButtonClick"/>
    </StackPane>

    <StackPane GridPane.rowIndex="5" GridPane.columnIndex="1">
        <Button text="-" onAction="#onHelloButtonClick"/>
    </StackPane>

    <StackPane GridPane.rowIndex="5" GridPane.columnIndex="2">
        <Button text="*" onAction="#onHelloButtonClick"/>
    </StackPane>
    <StackPane GridPane.rowIndex="6" GridPane.columnIndex="1">
        <Button text="=" onAction="#onHelloButtonClick"/>
    </StackPane>

</GridPane>
</VBox>